<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>See Saw</title>
		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
		<%= javascript_include_tag "vendor/modernizr" %>
		<%= csrf_meta_tags %>
	    <link rel="shortcut icon" href="/favicon.ico?" />
	    <link href='http://fonts.googleapis.com/css?family=Aclonica' rel='stylesheet' type='text/css'>
</head>

<body>
	<div style="border-bottom" class="contain-to-grid sticky">
		<nav class="top-bar" data-topbar role="navigation" data-options="sticky_on: large">
			<ul class="title-area">
				<li class="name">
					<h1 class="top-title"><%= link_to 'SeeSaw', root_path %></a></h1>
				</li>
				<li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
			</ul>

			<% if current_user %>
				<section class="top-bar-section">
					<!-- Right Nav Section -->
					<ul class="right">


						<li id="new-story-button"><%= link_to 'New Story', new_story_path %></li>

						<li id="browse" class="show-for-medium-up">
							<%= link_to 'Browse', stories_path %>
						</li>

						<li class="has-dropdown">
							<a href="#">
								<% if current_user %>
									<i class="fi-torso"></i> &nbsp;<%= current_user.first_name%>
								<% end %>
							</a>

							<ul class="dropdown">
								<li><%= link_to 'My Profile', user_path(current_user) %></li>
								<li><%= link_to 'My Feed', feed_path(current_user) %></li>
								<li><%= link_to "Logout", logout_path, method: :get %></li>
							</ul>
						</li>
					</ul>
				</section>
			<% else %>
				<section class="top-bar-section">
					<ul class="right">

						<li id="login-button"><%= link_to 'Login', root_url %></li>

						<li id="registration-button"><%= link_to 'Register', new_user_path %></li>

						<li id="browse" class="show-for-medium-up">
							<%= link_to 'Browse', stories_path %>
						</li>
					</ul>
				</section>
			<% end %>
		</nav>
	</div>

	<div class="main-content">
  	<%= yield %>
  </div>

  <footer>
	  <section>
	  	<table>
	  		<tr>
	  			<td>Contact</td>
	  			<td>Privacy</td>
	  			<td>Careers</td>
	  		</tr>
	  	</table>
	  </section>
  	<div>&copy; Bitmaker Booiiizzz</div>
  </footer>

</body>
</html>
