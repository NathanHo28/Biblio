<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	  <title>See Saw</title>
	  <%= stylesheet_link_tag    'application', media: 'all' %>
	  <%= javascript_include_tag 'application' %>
	  <%= javascript_include_tag "vendor/modernizr" %>
	  <%= csrf_meta_tags %>
	  <%= favicon_link_tag 'favicon.ico' %>


</head>
<body>
	<div style="border-bottom"> 
		<nav class="top-bar" data-topbar role="navigation">
			<ul class="title-area">
				<li class="name">
					<h1 class="top-title"><%= link_to 'SeeSaw', root_path %></a></h1>
				</li>
				<li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
			</ul>

			<% if current_user %>
				<section class="top-bar-section">
					<!-- Right Nav Section -->
					<ul class="right">

						<li class="has-dropdown">
							<a href="#">
								<% if current_user %>
									<i class="fi-torso"></i> &nbsp;<%= current_user.first_name%>
								<% end %>
							</a>

							<ul class="dropdown">
								<li><%= link_to 'My Profile', user_path(current_user) %></li>
								<li><%= link_to 'My Feed', feed_path(current_user) %></li>
								<li><%= link_to "Logout", logout_path, method: :get %></li>
							</ul>
						</li>

						<li id="new-story-button"><%= link_to 'New Story', new_story_path %></li>	

						<li id="browse" class="show-for-medium-up">
							<%= link_to 'Browse', stories_path %>
						</li>
					</ul>
				</section>
			<% else %>
				<section class="top-bar-section">
					<ul class="right">

						<li id="login-button"><%= link_to 'Login', root_url %></li>

						<li id="registration-button"><%= link_to 'Register', new_user_path %></li>	

						<li id="browse" class="show-for-medium-up">
							<%= link_to 'Browse', stories_path %>
						</li>
					</ul>
				</section>
			<% end %>
		</nav>
	</div>

  <%= yield %>

  <section>
  	<table>
  		<tr>
  			<td>Contact</td>
  			<td>Privacy</td>
  			<td>Careers</td>
  		</tr>
  	</table>
  </section>

  <footer>
  	<div>&copy; Bitmaker Booiiizzz</div>
  	<div>Icons made by <a href="http://www.freepik.com" title="Freepik">Freepik</a>, <a href="http://www.simpleicon.com" title="SimpleIcon">SimpleIcon</a> from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a>         is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0">CC BY 3.0</a></div>
  </footer>

</body>
</html>
