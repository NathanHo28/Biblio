<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	  <title>See Saw</title>
	  <%= stylesheet_link_tag    'application', media: 'all' %>
	  <%= javascript_include_tag 'application' %>
	  <%= javascript_include_tag "vendor/modernizr" %>
	  <%= csrf_meta_tags %>

</head>
<body>
  <nav>
	<% if current_user %> <!-- Do not need to define this with sorcery -->
	<div class="icon-bar five-up" role="navigation">
		<%= link_to root_url, class: "item", role: "button", tabindex: "0" do %>
			<i class="fi-home"></i>
			<label>Home</label>
		<% end %>
		<%= link_to new_story_path, class: "item", role: "button", tabindex: "0" do %>
			<i class="fi-book"></i>
			<label>New Story</label>
		<% end %>
		<%= link_to user_path(current_user), class: "item", role: "button", tabindex: "0" do %>
			<i class="fi-torso"></i>
			<label><%= current_user.username %></label>
		<% end %>
		<%= link_to logout_path, class: "item", role: "button", tabindex: "0" do %>
			<i class="fi-power"></i>
			<label>Logout</label>
		<% end %>
		<%= link_to stories_url, class: "item", role: "button", tabindex: "0" do %>
			<i class="fi-web"></i>
			<label>Browse</label>
		<% end %>

	<% else %>

		<div class="icon-bar three-up" role="navigation">
				<%= link_to root_url, class: "item", role: "button", tabindex: "0" do %>
					<i class="fi-power"></i>
					<label>Login</label>
				<% end %>
				<%= link_to new_user_path, class: "item", role: "button", tabindex: "0" do %>
					<i class="fi-plus"></i>
					<label>Register</label>
				<% end %>
		    	<%= link_to stories_url, class: "item", role: "button", tabindex: "0" do %>
					<i class="fi-web"></i>
					<label>Browse</label>
				<% end %>
			</div>
		</div>

	<% end %>
  </nav>

  <%= yield %>

  <section>
  	<table>
  		<tr>
  			<td>Contact</td>
  			<td>Privacy</td>
  			<td>Careers</td>
  		</tr>
  	</table>
  </section>

  <footer>
  	<div>&copy; Bitmaker Booiiizzz</div>
  	<div>Icons made by <a href="http://www.freepik.com" title="Freepik">Freepik</a>, <a href="http://www.simpleicon.com" title="SimpleIcon">SimpleIcon</a> from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a>         is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0">CC BY 3.0</a></div>
  </footer>

</body>
</html>
