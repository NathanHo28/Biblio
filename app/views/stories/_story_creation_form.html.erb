<%= form_for(@story) do |s| %>

	<div class ="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	<div>
	    <%= f.label :image %>
	    <%= f.file_field :image %>
	<div>
	<!-- this is how we do images, right? -->
	<div>
		<%= f.hidden_field :owner, :value => current_user %>
	</div>

	<p> Illustrate your story! </p>
	<div class="chapters">
	<%= s.fields_for :chapters do |chapter_fields| %>
		<%= render 'chapter_creation_form', s: chapter_fields %>
	<% end %>
	<%= link_to_add_association "Add chapter!", s, :chapters %>

	<div class="action">
		<%= f.submit %>
	</div>

<% end %>