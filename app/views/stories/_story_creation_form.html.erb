<%= form_for(@story) do |s| %>

	<div class ="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	<div>
	    <%= f.label :image %>
	    <%= f.file_field :image %>
	<div>
	<!-- this is how we do images, right? -->
	<div>
		<%= f.hidden_field :owner, :value => current_user %>
	</div>

	<p> Illustrate your story! </p>
	<div class="pages">
	<%= s.fields_for :pages do |page_fields| %>
		<%= render 'page_creation_form', s: page_fields %>
	<% end %>
	<%= link_to_add_association "Add page!", s, :pages %>

	<div class="action">
		<%= f.submit %>
	</div>

<% end %>