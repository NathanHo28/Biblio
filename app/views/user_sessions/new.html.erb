<h1>Login</h1>


	<%= form_tag user_sessions_path, :method => :post, :id => "loginform" do %>
		<div class="row">
			<div class="small-3 small-centered columns">
				<div class="field">
					<%= text_field_tag :email, params[:email], placeholder: "email" %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="small-3 small-centered columns">
				<div class="row collapse">
					<div class="small-10 columns">
						<div class="field">
							<%= password_field_tag(:password, "", placeholder: "password") %>
						</div>
					</div>
					<div class="small-2 columns">
						<%= button_tag "Login", class: "button postfix" %>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div id="remember_me" class="small-3 small-centered columns">
				<%= label_tag :remember_me %>
				<%= check_box_tag :remember_me, type: "checkbox" %>
			</div>
		</div>
	<div class="row">
		<div id="splash_links" class="small-3 small-centered columns">
			<%= link_to 'Forgot Password?', new_password_reset_path %> |
			<%= link_to "Sign Up", new_user_path %>
		</div>
	</div>
	<% end %>

