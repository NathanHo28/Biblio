<%= form_for @user do |f| %>

<fieldset>
	<legend>User Info</legend>
	<div class="field">
		<%= f.label :first_name %><br/>
		<%= f.text_field :first_name %>
	</div>

	<div class="field">
		<%= f.label :last_name %><br/>
		<%= f.text_field :last_name %>
	</div>

	<div class="field">
		<%= f.label :username %><br/>
		<%= f.text_field :username %>
	</div>

	<div class="field">
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</div>

	<div class="field">
		<%= f.label :home_town %><br/>
		<%= f.text_field :home_town %>
	</div>

	<div class="field">
		<%= f.label :about_me %><br/>
		<%= f.text_area :about_me %>
	</div>

	<div class="field">
		<%= f.label :photo %><br/>
		<%= f.file_field :photo %>
	</div>

	<div class="field">
		<%= f.label :password %><br/>
		<%= f.password_field :password %>
	</div>

	<div class="field">
		<%= f.label :password_confirmation %><br/>
		<%= f.password_field :password_confirmation %>
	</div><br/>

	<div class="field">
		<%= f.submit "Submit", class: "submit" %>
	</div>
</fieldset>


<% end %>