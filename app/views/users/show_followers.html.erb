<div class="row">
	<div class="follow-title">
		<h4>Followers</h4>
	</div>
<div class="large-4 columns small-centered">
<div class="user-list">
	<a href="<%= following_user_path(@user) %>">
		<% @user.followers.map do |user| %>
		<ul>
			<p>
				<%= image_tag user.photo_url(:thumb), class: "super-user" %> 
				<%= link_to user.username, user_url(user), class: "button" %> <%= link_to "Follow", follow_user_path(user_id: user), class: "button" %>
			</p>
		</ul>
		<% end %>
</div>
</div>
</div>

	
