<h3>Followers</h3>

<div class="user-list">
	<a href="<%= following_user_path(@user) %>">
	<strong id="following-list">
		<% @user.followers.map do |user| %>
		<ul>
			<%= user.first_name %> <%= user.last_name %>
			<p>
				<%= image_tag user.photo_url(:thumb) %> 
				<%= link_to user.username, user_url(user), class: "button" %> <%= link_to "Follow", follow_user_path(user_id: user), class: "button" %>
			</p>
		</ul>
		<% end %>
	</strong>
</div>
	
