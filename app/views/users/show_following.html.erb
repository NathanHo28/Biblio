<h3>Following</h3>

<div class="user-list">
	<a href="<%= following_user_path(@user) %>">
	<strong id="following-list">
		<% @user.following.map do |user| %>
		<ul>
			<p><%= image_tag user.photo_url(:thumb) %> <%= link_to user.username, user_path(user) %> | <%= user.first_name %> <%= user.last_name %>	|
				<%= link_to "Unfollow", unfollow_user_path(user_id: user) %> </p>

		</ul>
		<% end %>
	</strong>
</div>



