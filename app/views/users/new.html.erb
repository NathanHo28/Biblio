
<% if current_user %>
	<div='registration_error_message'>
	<p>You can't create an account while you're logged in! Why not <%= link_to "create a story", new_story_path %> instead? </p>
	</div>

<% else %>

<h1>Sign Up</h1>

	<%= form_for @user do |f| %>

		<div class="field">
			<%= f.label :first_name, class: "littletitle" %><br/>
			<%= f.text_field :first_name, class: "inputfield" %>
		</div>

		<div class="field">
			<%= f.label :last_name, class: "littletitle" %><br/>
			<%= f.text_field :last_name, class: "inputfield"  %>
		</div>

		<div class="field">
			<%= f.label :username, class: "littletitle" %><br/>
			<%= f.text_field :username, class: "inputfield"  %>
		</div>

		<div class="field">
			<%= f.label :email, class: "littletitle" %><br/>
			<%= f.text_field :email, class: "inputfield"  %>
		</div>

		<div class="field">
			<%= f.label :home_town, class: "littletitle" %><br/>
			<%= f.text_field :home_town, class: "inputfield"  %>
		</div>

		<div class='field'>
			<%= f.label :country, class: "littletitle" %><br/>
			<%= f.text_field :country, class: "inputfield"  %>
		</div>

		<div class="field">
			<%= f.label :password, class: "littletitle" %><br/>
			<%= f.password_field :password %>
		</div>

		<div class="field">
			<%= f.label :password_confirmation, class: "littletitle" %><br/>
			<%= f.password_field :password_confirmation, class: "inputfield"  %>
		</div>

		<div class="field">
			<%= f.submit "Submit"%>
		</div>

	<% end %>
<% end %>